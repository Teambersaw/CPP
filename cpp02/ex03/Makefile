CXX= c++

CXXFLAGS= -Wall -Wextra -Werror -std=c++98

HEADER= Fixed.hpp Point.hpp

SRCS= main.cpp Fixed.cpp Point.cpp bsp.cpp

OBJS= ${SRCS:.cpp=.o}

NAME= BSP

${NAME}: ${OBJS} ${HEADER}
		${CXX} ${CXXFLAGS} ${OBJS} -o ${NAME}

all: ${NAME}

clean:
	rm -f ${OBJS}

fclean: clean
	rm -f ${NAME}

re: fclean all

.PHONY: all clean fclean re
